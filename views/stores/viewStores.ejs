<head>
  <title>Viewing all Stores</title>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
    }
  </style>
  <script src="../../public/scripts/shortcuts.js" type="module"></script>
</head>

<body>
  <h1>Stores</h1>
  <br /><br /><br />
  <a href="http://localhost:3004/stores/new">New Store</a> <br />

  <br />
  <!-- Table displaying all stores. -->
  <table>
    <thead>
      <tr>
        <th>SID</th>
        <th>Location</th>
        <th>Manager ID</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% stores.forEach((store)=> { %>
        <tr>
          <td>
            <%= store.sid %>
          </td>
          <td>
            <%= store.location %>
          </td>
          <td>
            <%= store.mgrid %>
          </td>
          <td>
            <a href="http://localhost:3004/stores/edit/<%= store.sid %>">Update</a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <br />

  <a href="http://localhost:3004/home">Home</a>
</body>